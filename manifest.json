{
  "manifest_version": 3,
  "name": "nTabs (feature/view-collections)",
  "version": "1.0",
  "description": "Manage and sync your open Chrome tabs to Notion collections.",
  "author": "dbbaskette",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://api.notion.com/"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}